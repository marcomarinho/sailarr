# ============================================
# GENERAL SETTINGS
# ============================================
# Get your PUID and PGID by running: id
# These MUST be the same across all services for symlinks to work
PUID=1000
PGID=1000
UMASK=002

# Timezone - Find yours at: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/New_York

# ============================================
# PLEX SETTINGS
# ============================================
# Optional: Plex claim token for initial setup
# Get from: https://www.plex.tv/claim/
# Leave empty if already set up
PLEX_CLAIM=

# ============================================
# REAL-DEBRID SETTINGS
# ============================================
# REQUIRED: Your Real-Debrid API token
# Get from: https://real-debrid.com/apitoken
REALDEBRID_API_KEY=your_realdebrid_api_key_here

# ============================================
# RADARR SETTINGS
# ============================================
# Get API keys from Settings > General in each Radarr instance
# Leave empty initially, fill in after first setup
RADARR_API_KEY=
PLEX_TOKEN=

# ============================================
# SONARR SETTINGS
# ============================================
# Get API keys from Settings > General in each Sonarr instance
# Leave empty initially, fill in after first setup
SONARR_API_KEY=

# ============================================
# OPTIONAL SERVICES
# ============================================
# These can be configured later if needed
PROWLARR_API_KEY=
OVERSEERR_API_KEY=
TAUTULLI_API_KEY=

# ============================================
# ADVANCED SETTINGS
# ============================================
# Only change these if you know what you're doing

# Docker network settings
DOCKER_NETWORK=mediacenter
DOCKER_NETWORK_EXTERNAL=false

# Blackhole advanced settings
BLACKHOLE_FAIL_IF_NOT_CACHED=true
BLACKHOLE_RD_MOUNT_REFRESH_SECONDS=200
BLACKHOLE_WAIT_FOR_TORRENT_TIMEOUT=300
BLACKHOLE_HISTORY_PAGE_SIZE=500

# Python settings
PYTHONUNBUFFERED=TRUE
